import os.path
def createFile():
    try:
        with open("pisulka.txt", "w") as file:  # создаем файл
            file.write("bau\n")
    except FileNotFoundError:
        print("Невозможно открыть файл")
def addRec():
    try:
        with open("pisulka.txt", "a") as file:  # дополняем
            file.write("bay\n")
    except FileNotFoundError:
        print("Невозможно открыть файл")
if os.path.isfile("pisulka.txt"):
    addRec()
else:
    createFile()
